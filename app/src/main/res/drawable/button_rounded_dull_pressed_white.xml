<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/color_gray_light_v1" />
            <solid android:color="@color/color_gray"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="1dip" android:color="@color/color_gray_light_v1" />
            <solid android:color="@color/color_gray"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <solid android:color="@color/color_gray_light_v1"/>
            <stroke android:width="1dp" android:color="@color/color_gray"/>
            <corners android:radius="6dip" />
        </shape>
    </item>
</selector>